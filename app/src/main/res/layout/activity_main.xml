<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.MainActivity">

    <!-- Top Bar with Info Icon -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_info"
            android:src="@drawable/rounded_info_24"/>

    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardInfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- App Icon -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="?attr/colorControlHighlight"
                app:cardCornerRadius="48dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_retailx" />

            </com.google.android.material.card.MaterialCardView>

            <!-- App Name -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/circular_spotify"
                android:text="@string/app_name"
                android:textColor="?attr/colorPrimary"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardIcon" />

            <!-- Single Feature Cards Container with 2x2 Grid -->
            <!-- Auto-Scrolling Feature Cards - Play Store Style -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/featureCardsMainContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toTopOf="@+id/progressBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAppName">

                <!-- HorizontalScrollView for auto-scrolling -->
                <HorizontalScrollView
                    android:id="@+id/featureCardsScrollView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/featureCardsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- AI Prediction Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAI"
                            android:layout_width="280dp"
                            android:layout_height="220dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="?attr/colorPrimaryContainer"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/iconAI"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:cardBackgroundColor="?attr/colorPrimary"
                                    app:cardCornerRadius="28dp"
                                    app:cardElevation="6dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/baseline_person_24"
                                        app:tint="?attr/colorOnPrimary" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/tvAITitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/circular_spotify"
                                    android:lineSpacingExtra="2dp"
                                    android:text="@string/ai_sales_prediction"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/iconAI" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Predict future sales with AI"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvAITitle" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Inventory Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardInventory"
                            android:layout_width="280dp"
                            android:layout_height="220dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="?attr/colorSecondaryContainer"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/iconInventory"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:cardBackgroundColor="?attr/colorSecondary"
                                    app:cardCornerRadius="28dp"
                                    app:cardElevation="6dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/baseline_inventory_2_24"
                                        app:tint="?attr/colorOnSecondary" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/tvInventoryTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/circular_spotify"
                                    android:lineSpacingExtra="2dp"
                                    android:text="@string/inventory_control"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/iconInventory" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Manage stock efficiently"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvInventoryTitle" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Firebase Sync Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardSync"
                            android:layout_width="280dp"
                            android:layout_height="220dp"
                            android:layout_marginEnd="16dp"
                            app:cardBackgroundColor="?attr/colorTertiaryContainer"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/iconSync"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:cardBackgroundColor="?attr/colorTertiary"
                                    app:cardCornerRadius="28dp"
                                    app:cardElevation="6dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/round_sync_24"
                                        app:tint="?attr/colorOnTertiary" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/tvSyncTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/circular_spotify"
                                    android:lineSpacingExtra="2dp"
                                    android:text="Firebase &amp; RoomDB Sync"
                                    android:textColor="?attr/colorOnTertiaryContainer"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/iconSync" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Real-time cloud backup"
                                    android:textColor="?attr/colorOnTertiaryContainer"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvSyncTitle" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Material 3 Design Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardDesign"
                            android:layout_width="280dp"
                            android:layout_height="220dp"
                            app:cardBackgroundColor="?attr/colorErrorContainer"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="24dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/iconDesign"
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    app:cardBackgroundColor="?attr/colorError"
                                    app:cardCornerRadius="28dp"
                                    app:cardElevation="6dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/todo"
                                        android:src="@drawable/rounded_palette_24"
                                        app:tint="?attr/colorOnError" />

                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/tvDesignTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/circular_spotify"
                                    android:lineSpacingExtra="2dp"
                                    android:text="Material 3 Expressive Design"
                                    android:textColor="?attr/colorOnErrorContainer"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/iconDesign" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Beautiful modern interface"
                                    android:textColor="?attr/colorOnErrorContainer"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvDesignTitle" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- Page Indicator Dots -->
                <LinearLayout
                    android:id="@+id/pageIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/featureCardsScrollView">

                    <View
                        android:id="@+id/dot1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/indicator_dot"
                        android:backgroundTint="?attr/colorPrimary" />

                    <View
                        android:id="@+id/dot2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="6dp"
                        android:alpha="0.3"
                        android:background="@drawable/indicator_dot"
                        android:backgroundTint="?attr/colorOnSurface" />

                    <View
                        android:id="@+id/dot3"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="6dp"
                        android:alpha="0.3"
                        android:background="@drawable/indicator_dot"
                        android:backgroundTint="?attr/colorOnSurface" />

                    <View
                        android:id="@+id/dot4"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:alpha="0.3"
                        android:background="@drawable/indicator_dot"
                        android:backgroundTint="?attr/colorOnSurface" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Business Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginBusinessBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/circular_spotify"
                android:text="@string/business_login"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                app:icon="@drawable/baseline_business_24"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconSize="24dp"
                app:layout_constraintBottom_toTopOf="@+id/loginCustomerBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Customer Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginCustomerBtn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/circular_spotify"
                android:text="@string/login_as_customer"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                app:icon="@drawable/baseline_person_24"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/loginBusinessBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>