<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="100dp">

            <!-- Simplified Header -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvGreeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/circular_spotify"
                android:text="Dashboard"
                android:textColor="?attr/colorOnSurface"
                android:textSize="34sp"
                android:textStyle="bold"
                android:letterSpacing="-0.02"
                app:layout_constraintEnd_toStartOf="@id/ivAdminProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivAdminProfile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/round_account_circle_24"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvGreeting"
                app:layout_constraintBottom_toBottomOf="@id/tvGreeting"/>

            <!-- Stats Grid - iOS Card Style -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="32dp"
                android:columnCount="2"
                android:rowCount="2"
                app:layout_constraintTop_toBottomOf="@id/tvGreeting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Total Sales Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorSecondaryContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:minHeight="130dp"
                        android:gravity="bottom">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_show_chart_24"
                            app:tint="?attr/colorOnSecondaryContainer"
                            android:alpha="0.7"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales"
                            android:textSize="13sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvTotalSales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textSize="26sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textStyle="bold"
                            android:letterSpacing="-0.01"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Total Products Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorTertiaryContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:minHeight="130dp"
                        android:gravity="bottom">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_inventory_2_24"
                            app:tint="?attr/colorOnTertiaryContainer"
                            android:alpha="0.7"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Products"
                            android:textSize="13sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvTotalProducts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textStyle="bold"
                            android:letterSpacing="-0.01"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Total Employees Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorPrimaryContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:minHeight="130dp"
                        android:gravity="bottom">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_person_24"
                            app:tint="?attr/colorOnPrimaryContainer"
                            android:alpha="0.7"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employees"
                            android:textSize="13sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvTotalEmployees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textStyle="bold"
                            android:letterSpacing="-0.01"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Total Orders Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="?attr/colorErrorContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:minHeight="130dp"
                        android:gravity="bottom">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_list_alt_24"
                            app:tint="?attr/colorOnErrorContainer"
                            android:alpha="0.7"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orders"
                            android:textSize="13sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvTotalOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:fontFamily="@font/circular_spotify"
                            android:textStyle="bold"
                            android:letterSpacing="-0.01"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Actions Section - iOS List Style -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/actionsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gridLayout"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Manage Products -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnManageProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="?attr/colorPrimaryContainer"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingTop="18dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="18dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="?attr/colorPrimary"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_inventory_2_24"
                                    app:tint="?attr/colorOnPrimary" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Manage Products"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="View and edit inventory"
                                    android:textColor="?attr/colorOnPrimaryContainer"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:alpha="0.5"
                                android:src="@drawable/baseline_chevron_right_24"
                                app:tint="?attr/colorOnPrimaryContainer" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sales Charts -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnViewSales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="?attr/colorSecondaryContainer"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingTop="18dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="18dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="?attr/colorSecondary"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_show_chart_24"
                                    app:tint="?attr/colorOnSecondary" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Sales Charts"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Analytics and insights"
                                    android:textColor="?attr/colorOnSecondaryContainer"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:alpha="0.5"
                                android:src="@drawable/baseline_chevron_right_24"
                                app:tint="?attr/colorOnSecondaryContainer" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Recent Orders -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnRecentOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="?attr/colorTertiaryContainer"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingTop="18dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="18dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="?attr/colorTertiary"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_list_alt_24"
                                    app:tint="?attr/colorOnTertiary" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Recent Orders"
                                    android:textColor="?attr/colorOnTertiaryContainer"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Track order status"
                                    android:textColor="?attr/colorOnTertiaryContainer"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:alpha="0.5"
                                android:src="@drawable/baseline_chevron_right_24"
                                app:tint="?attr/colorOnTertiaryContainer" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Top Selling -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnTopSelling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingTop="18dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="18dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="#FFB300"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_star_24"
                                    app:tint="#FFFFFF" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Top Selling Products"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Best performers"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:alpha="0.5"
                                android:src="@drawable/baseline_chevron_right_24"
                                app:tint="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Low Stock -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnLowStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="?attr/colorErrorContainer"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingTop="18dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="18dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="?attr/colorError"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_warning_24"
                                    app:tint="?attr/colorOnError" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Low Stock Alert"
                                    android:textColor="?attr/colorOnErrorContainer"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/circular_spotify"
                                    android:text="Items need restocking"
                                    android:textColor="?attr/colorOnErrorContainer"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:alpha="0.5"
                                android:src="@drawable/baseline_chevron_right_24"
                                app:tint="?attr/colorOnErrorContainer" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- iOS-style FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAddEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:cornerRadius="8dp"
        android:text="Add Employee"
        android:fontFamily="@font/circular_spotify"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:backgroundTint="?attr/colorPrimaryContainer"
        app:icon="@drawable/baseline_person_add_24"
        app:iconTint="?attr/colorOnPrimaryContainer" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>