<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".utils.MapsActivity">

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Bar Container -->
    <!-- Search Bar Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        style="@style/Widget.Material3.CardView.Elevated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="Search"
                app:tint="?attr/colorOnSurfaceVariant" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Search for a location..."
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:fontFamily="@font/circular_spotify"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:maxLines="1" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Center Pin -->
    <!-- Positioned slightly above center layout to account for pin tip -->
    <ImageView
        android:id="@+id/ivPin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_location_pin_24"
        android:layout_marginBottom="24dp"
        app:tint="#EA4335"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Current Location FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:maxImageSize="24dp"
        android:contentDescription="My Location"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintBottom_toTopOf="@+id/cvLocationDetails"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Location Details Bottom Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvLocationDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        style="@style/Widget.Material3.CardView.Filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Location"
                android:fontFamily="@font/circular_spotify"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCurrentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Move pin to select location"
                android:fontFamily="@font/circular_spotify"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmLocation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Confirm Location"
                android:fontFamily="@font/circular_spotify"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
